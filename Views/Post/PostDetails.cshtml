
@model Studentko.Models.Post
@{
    ViewData["Title"] = "PostDetails";
}

<div class="text-center">
    <h1>Pozdrav na tem postu </h1>

    <h2>@Model.title</h2>
    <h3>@Model.subtitle</h3>
    <p>@Model.content</p>
    <small>Posted on: @Model.date?.ToString("MM/dd/yyyy")</small>

<h3>Comments:</h3>

<ul id="comments-list">
    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments)
        {
            <div id="commentcontent">
                <li>               
                    <strong>@comment.user.UserName</strong> commented on @comment.CreatedAt?.ToString("MM/dd/yyyy")<br />
                    <p>@comment.content</p>
                </li>
            </div>
        }
    }
    else
    {
        <li>No comments yet.</li>
    }
</ul>

@if (User.Identity.IsAuthenticated){
    @using (Html.BeginForm("AddComment", "Comment", FormMethod.Post))
    {
        <input type="hidden" name="PostID" value="@Model.PostID" />
        <textarea name="content" placeholder="Add a comment..." required></textarea>
        <button type="submit">Post Comment</button>
    }
}
else {
    <p> Za objavljanje komentarjev mora≈° biti prijavljen </p>
}
  
</div>